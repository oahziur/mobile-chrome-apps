<plugin xmlns="http://cordova.apache.org/ns/plugins/1.0"
    id="org.chromium.echo"
    version="1.0.2">
  <engines>
    <engine name="cordova" version=">=3.0.0" />
  </engines>

  <name>Chrome Echo API</name>

  <js-module src="echo.js" name="echo">
    <clobbers target="chrome.echo" />
  </js-module>

  <platform name="android">
    <source-file src="src/android/ChromeEcho.java" target-dir="src/org/chromium" />

    <config-file target="res/xml/config.xml" parent="/widget">
      <feature name="ChromeEcho">
        <param name="android-package" value="org.chromium.ChromeEcho"/>
      </feature>
    </config-file>
  </platform>

</plugin>
